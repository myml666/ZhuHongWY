<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/dp_10"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_pyq_img_usericon"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@drawable/ic_defaultusericon"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50" />
    <TextView
        android:layout_marginRight="@dimen/dp_10"
        android:id="@+id/item_pyq_tv_username"
        android:layout_toRightOf="@id/item_pyq_img_usericon"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/colorAccent"
        tools:text="用户名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="@dimen/dp_10"
        android:id="@+id/item_pyq_tv_content"
        android:layout_below="@id/item_pyq_tv_username"
        android:layout_toRightOf="@id/item_pyq_img_usericon"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorTextBlack"
        tools:text="用户名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/item_pyq_img_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@id/item_pyq_tv_content"
        android:layout_toRightOf="@id/item_pyq_img_usericon"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:scaleType="centerInside"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="match_parent" />
    <View
        android:layout_alignParentBottom="true"
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
</RelativeLayout>