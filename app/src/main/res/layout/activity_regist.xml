<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_loginbg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_title"/>
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_40"
        android:paddingRight="@dimen/dp_40"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/activity_regist_username"
            android:hint="请输入用户名"
            style="@style/EtStyle_Login" />
        <EditText
            android:id="@+id/activity_regist_password"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/dp_15"
            style="@style/EtStyle_Login" />
        <EditText
            android:id="@+id/activity_regist_passwordagain"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/dp_15"
            style="@style/EtStyle_Login" />
        <TextView
            android:id="@+id/activity_regist_tv_regist"
            android:textSize="@dimen/sp_15"
            android:text="注册"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/shape_btbg"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_35" />
    </LinearLayout>
</LinearLayout>