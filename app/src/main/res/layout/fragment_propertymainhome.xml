<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorMainHomeBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.bingoogolapple.bgabanner.BGABanner
            app:layout_aspectRatio="202%"
            app:layout_widthPercent="100%"
            android:id="@+id/fragment_propertymainhome_banner"
            style="@style/BannerDefaultStyle"
            app:banner_pointContainerBackground="@android:color/transparent"
            />
    </android.support.percent.PercentRelativeLayout>
    <com.zhwy.app.widget.MyDividerGridView
        android:id="@+id/fragment_propertymainhome_gv"
        android:padding="@dimen/dp_4"
        android:numColumns="3"
        android:layout_margin="@dimen/dp_5"
        android:horizontalSpacing="0.0dip"
        android:listSelector="@null"
        android:background="@drawable/shape_homemenubg"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0.0dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.zhwy.app.widget.MyDividerGridView>
</LinearLayout>