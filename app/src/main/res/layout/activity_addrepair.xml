<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_title"/>
    <ScrollView
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorTextBlack"
                    android:text="标题："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/activity_repairdetails_et_title"
                    android:textSize="@dimen/sp_15"
                    android:hint="请输入标题"
                    android:background="@null"
                    android:textColor="@color/colorTextBlack"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorTextBlack"
                    android:text="户号："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/activity_repairdetails_et_number"
                    android:textSize="@dimen/sp_15"
                    android:background="@null"
                    android:hint="请输入户号"
                    android:textColor="@color/colorTextBlack"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorTextBlack"
                    android:text="姓名："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/activity_repairdetails_et_name"
                    android:textSize="@dimen/sp_15"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:textColor="@color/colorTextBlack"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorTextBlack"
                    android:text="手机："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/activity_repairdetails_et_phone"
                    android:textSize="@dimen/sp_15"
                    android:hint="请输入手机号"
                    android:background="@null"
                    android:textColor="@color/colorTextBlack"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorTextBlack"
                    android:text="详情："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <EditText
                android:id="@+id/activity_repairdetails_et_content"
                android:textSize="@dimen/sp_15"
                android:hint="请输入详情"
                android:background="@null"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/colorTextBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/activity_addnotice_tv_submit"
        android:background="@color/colorMain"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_15"
        android:text="提交"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40" />
</LinearLayout>